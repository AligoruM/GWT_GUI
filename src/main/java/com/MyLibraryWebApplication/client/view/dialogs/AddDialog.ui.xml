<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.MyLibraryWebApplication.client.view.textFields'>


    <g:HTMLPanel styleName="dialogs">
        <g:DialogBox ui:field="dialogPanel" text="Adding book">
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>Name:</td>
                        <td>
                            <c:ValidationTextField ui:field="nameBox"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Author:</td>
                        <td>
                            <c:ValidationTextField ui:field="authorBox"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Pages:</td>
                        <td><c:ValidationTextField ui:field="pagesBox"/></td>
                    </tr>
                    <tr>
                        <td>Publication date</td>
                        <td><c:ValidationTextField ui:field="dateBox"/></td>
                    </tr>
                    <tr>
                        <td/>
                        <td>
                            <g:Button ui:field="submitButton" text="Submit"/>
                            <g:Button ui:field="cancelButton" text="Cancel"/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:DialogBox>
    </g:HTMLPanel>
</ui:UiBinder>